<p style="color: green"><%= notice %></p>

<h1>Departamentos</h1>

<div id="departamentos">
  <table class="table table-bordered table-hover">
    <thead>
      <tr>
        <th width="50%">Nome</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @departamentos.each do |departamento| %>
        <tr>
          <td><%= departamento.nome %></td>  
          <td><%= link_to "Ver produtos", departamento, class: "btn btn-default" %></td>
          <td><%= link_to "Editar", edit_departamento_path(departamento), class: "btn btn-default" %></td>
          <td><%= link_to "Deletar", departamento, method: :delete, data: { confirm: "Tem certeza que deseja remover o departamento #{departamento.nome}?" }, class: "btn btn-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to "Criar novo departamento", new_departamento_path, class: "btn btn-default" %>
